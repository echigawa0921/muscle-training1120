<meta name=”viewport” content=”width=device-width,initial-scale=1.0″>
<body>
<div class="top-gaiyou">
  <div class="mypage-name"><%= @nickname %>の投稿一覧</div>
</div>
    <main class="main">
    <h1 class="arm-page-heading"></h1>
      <div class="arm-inner">
        <% @posts.each do |post| %>
        <%= link_to post_path(post.id),  :style=>"color:black;",method: :get do %>
        <div class="arm-card__wrapper">
          <div class="arm-card">
          <%= image_tag post.image, class: "arm-card__img" if post.image.attached? %>
            <div class="card__body">
              <h2 class="card__title">投稿者：<%= post.user.nickname %></h2>
              <p class="card__summary">
              <p>鍛えた部位：<%= post.category.name %></p>
              <p>一言：<%= post.message %></p>
              </p>
            </div>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
     </main>
</body>